{
  "name": "deepractice-ai-agent",
  "version": "0.0.1",
  "description": "Deepractice AI Agent - Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:backend & wait-on http://localhost:5201/health -t 30000 && pnpm dev:frontend",
    "dev:backend": "turbo run dev --filter=@deepractice-ai/agent-service",
    "dev:frontend": "turbo run dev --filter=@deepractice-ai/agent-web",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "lefthook install || true"
  },
  "author": "Deepractice",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "lefthook": "^1.13.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "wait-on": "^8.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "better-sqlite3",
      "esbuild",
      "node-pty",
      "sharp",
      "sqlite3"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
